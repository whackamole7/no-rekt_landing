---
import Header from "@components/Header/Header.astro";
import "./MainBlock.scss";
---

<div class="MainBlock block">
	<div class="_container">
		<Header />
		<div class="MainBlock__body">
			<h1 class="MainBlock__title">
				Borrow up to <br />90% LTV with <span class="_hlight"><span class="_underlined">zero</span> <br />liquidation risk</span>
			</h1>
			<div class="MainBlock__buttons">
				<a
					class="MainBlock__button _primary"
					href="https://sharwa.finance"
					target="_blank"
					rel="noreferrer"
				>
					Open app
				</a>
				<a
					class="MainBlock__button"
					href="#"
					target="_blank"
					rel="noreferrer"
				>
					Read docs
				</a>
			</div>
		</div>
		<div class="MainBlock__cursor-blob" />
	</div>
</div>

<script>
	import "./MainBlock.js";
</script>