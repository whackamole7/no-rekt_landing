---
import "./ProtocolBlock.scss";
import icon_LTV from "@img/blocks/protocol/icon-LTV.svg?url";
import icon_cross from "@img/blocks/protocol/icon-cross.svg?url";
import icon_structure from "@img/blocks/protocol/icon-structure.svg?url";
import icon_percent from "@img/blocks/protocol/icon-percent.svg?url";
import icon_lightning from "@img/blocks/protocol/icon-lightning.svg?url";
import shields from "@img/blocks/protocol/shields.svg?url";
import shields_med from "@img/blocks/protocol/shields_med.svg?url";

---

<section class="ProtocolBlock block">
	<div class="_container">
		<h2 class="ProtocolBlock__title anim_scroll" data-anim-index="0">
			Protocol Comparison
		</h2>
		<div class="ProtocolBlock__table anim_scroll" data-anim-index="1">
			<div class="ProtocolBlock__table-nav">
				<div class="ProtocolBlock__table-nav-item">
					<div class="ProtocolBlock__table-nav-item-icon">
						<img loading="lazy" src={icon_LTV} alt="diagram up icon" />
					</div>
					<div class="ProtocolBlock__table-nav-item-title">
						Maximum LTV
					</div>
				</div>
				<div class="ProtocolBlock__table-nav-item">
					<div class="ProtocolBlock__table-nav-item-icon">
						<img loading="lazy" src={icon_cross} alt="cross icon" />
					</div>
					<div class="ProtocolBlock__table-nav-item-title">
						Liquidation Risk
					</div>
				</div>
				<div class="ProtocolBlock__table-nav-item">
					<div class="ProtocolBlock__table-nav-item-icon">
						<img loading="lazy" src={icon_structure} alt="structure icon" />
					</div>
					<div class="ProtocolBlock__table-nav-item-title">
						Loan Structure
					</div>
				</div>
				<div class="ProtocolBlock__table-nav-item">
					<div class="ProtocolBlock__table-nav-item-icon">
						<img loading="lazy" src={icon_percent} alt="percent icon" />
					</div>
					<div class="ProtocolBlock__table-nav-item-title">
						Interest Rate
					</div>
				</div>
			</div>
			<div class="ProtocolBlock__table-cards">
				<div class="ProtocolBlock__table-card">
					<div class="ProtocolBlock__table-card-title">
						NoRekt
						<img loading="lazy" src={icon_lightning} alt="lightning icon" />
					</div>
					<div class="ProtocolBlock__table-card-content">
						<div class="ProtocolBlock__table-card-value">
							<div class="_inner-wrapper">
								<span class="_hlight">
									90%
								</span>
							</div>
						</div>
						<div class="ProtocolBlock__table-card-value">
							<div class="_inner-wrapper">
								None
								<img loading="lazy" src={shields} alt="3/3 green shields" />
							</div>
						</div>
						<div class="ProtocolBlock__table-card-value">
							<div class="_inner-wrapper">
								Variable
							</div>
						</div>
						<div class="ProtocolBlock__table-card-value">
							<div class="_inner-wrapper">
								Variable
							</div>
						</div>
					</div>
				</div>
				<div class="ProtocolBlock__table-card _dimmed">
					<div class="ProtocolBlock__table-card-title">
						Other Protocols
					</div>
					<div class="ProtocolBlock__table-card-content">
						<div class="ProtocolBlock__table-card-value">
							<div class="_inner-wrapper">
								<span class="_hlight">
									80%
								</span>
							</div>
						</div>
						<div class="ProtocolBlock__table-card-value">
							<div class="_inner-wrapper">
								Yes
								<img loading="lazy" src={shields_med} alt="2/3 yellow shields" />
							</div>
						</div>
						<div class="ProtocolBlock__table-card-value">
							<div class="_inner-wrapper">
								Variable
							</div>
						</div>
						<div class="ProtocolBlock__table-card-value">
							<div class="_inner-wrapper">
								Variable
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="ProtocolBlock__glide glide">
				<div class="glide__track" data-glide-el="track">
					<ul class="glide__slides">
						<!-- .ProtocolBlock__table-cards are appended here on window width <992px -->
					</ul>
				</div>
				<div class="glide__bullets" data-glide-el="controls[nav]">
					<!-- .glide__bullet is created for every card -->
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	import "./ProtocolBlock.js";
</script>