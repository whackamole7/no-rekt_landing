---
import "./PerksBlock.scss";
import perk_1 from "@img/blocks/perks/perk-1.svg?url";
import perk_1_glare from "@img/blocks/perks/perk-1-glare.svg?url";
import perk_1_mobile from "@img/blocks/perks/perk-1_mobile.svg?url";
import perk_1_glare_mobile from "@img/blocks/perks/perk-1-glare_mobile.svg?url";
import perk_2 from "@img/blocks/perks/perk-2.svg?url";
import perk_2_glare from "@img/blocks/perks/perk-2-glare.svg?url";
import perk_2_mobile from "@img/blocks/perks/perk-2_mobile.svg?url";
import perk_2_glare_mobile from "@img/blocks/perks/perk-2-glare_mobile.svg?url";
import perk_3_options from "@img/blocks/perks/perk-3_options.svg?url";
import perk_3_options_mobile from "@img/blocks/perks/perk-3_options_mobile.svg?url";
import perk_3_hedge from "@img/blocks/perks/perk-3_hedge.svg?url";
import perk_3_hedge_mobile from "@img/blocks/perks/perk-3_hedge_mobile.svg?url";
import perk_3_title from "@img/blocks/perks/perk-3_title.svg?url";
import perk_3_title_mobile from "@img/blocks/perks/perk-3_title_mobile.svg?url";
import icon_hint from "@img/icons/icon-hint.svg?url";
import circles from "@img/lottie/circles.json?url";
import LottieAnimation from "astro-integration-lottie/Lottie.astro";
---

<section class="PerksBlock block">
	<div class="_container">
		<h2 class="PerksBlock__title anim_scroll" data-anim-index="0">
			Perks That Keep You Safe
		</h2>
		<div class="PerksBlock__items anim_scroll" data-anim-index="1">
			<div class="PerksBlock__item">
				<div class="PerksBlock__item-pic">
					<picture>
						<source srcset={perk_1_mobile} media="(max-width: 768px)" />
						<img loading="lazy"
							src={perk_1}
							alt="diagram of profit"
						/>
					</picture>
					<div class="anim_glare _label">
						<picture>
							<source srcset={perk_1_glare_mobile} media="(max-width: 768px)" />
							<img loading="lazy"
								src={perk_1_glare}
								alt="up to 90% LTV"
							/>
						</picture>
					</div>
				</div>
				<div class="PerksBlock__item-info">
					<h3 class="PerksBlock__item-title">Higher LTV</h3>
					<div class="PerksBlock__item-text">Borrow up to 90% of your collateral value, maximizing capital efficiency and maintaining access to your funds</div>
				</div>
			</div>
			<div class="PerksBlock__item">
				<div class="PerksBlock__item-pic">
					<picture>
						<source srcset={perk_2_mobile} media="(max-width: 768px)" />
						<img loading="lazy"
							src={perk_2}
							alt="market volatility illustration"
						/>
					</picture>
					<div class="anim_glare _shield">
						<picture>
							<source srcset={perk_2_glare_mobile} media="(max-width: 768px)" />
							<img loading="lazy"
								src={perk_2_glare}
								alt="shielded ETH"
							/>
						</picture>
					</div>
				</div>
				<div class="PerksBlock__item-info">
					<h3 class="PerksBlock__item-title">No Liquidations</h3>
					<div class="PerksBlock__item-text">Your position is never liquidated, regardless of market volatility</div>
				</div>
			</div>
			<div class="PerksBlock__item">
				<div class="PerksBlock__item-pic _has-blocks">
					<div class="PerksBlock__item-pic-block _options" data-tooltip-type="trigger">
						<picture>
							<source srcset={perk_3_options_mobile} media="(max-width: 768px)" />
							<img loading="lazy"
								src={perk_3_options}
								alt="Options Fixed Price"
							/>
						</picture>
						<div class="_anchor" data-tooltip-type="anchor">
							<img loading="lazy"
								src={icon_hint}
								alt="Hint"
							/>
						</div>
						<div class="_tooltip" data-tooltip-type="tooltip">
							Pay a fixed premium <br />and stay protected for <br />a chosen time period
						</div>
					</div>
					<div class="PerksBlock__item-pic-block _hedge" data-tooltip-type="trigger">
						<picture>
							<source srcset={perk_3_hedge_mobile} media="(max-width: 768px)" />
							<img loading="lazy"
								src={perk_3_hedge}
								alt="Auto Hedge Pay as you Go"
							/>
						</picture>
						<div class="_anchor" data-tooltip-type="anchor">
							<img loading="lazy"
								src={icon_hint}
								alt="Hint"
							/>
						</div>
						<div class="_tooltip" data-tooltip-type="tooltip">
							No upfront premium. Costs <br />apply only on hedge entry/<br />exit plus leverage fees
						</div>
					</div>
					<div class="PerksBlock__item-pic-block _title">
						<picture>
							<source srcset={perk_3_title_mobile} media="(max-width: 768px)" />
							<img loading="lazy"
								src={perk_3_title}
								alt="two types of protection from 1 to 90 days"
							/>
						</picture>
					</div>
				</div>
				<LottieAnimation
					class="PerksBlock__item-lottie"
					src={circles}
					autoplay="visible"
					loop
				/>
			</div>
		</div>
	</div>
</section>